import React, { useState } from 'react';
import { base44 } from '@/api/base44Client';
import { useQuery, useMutation, useQueryClient } from '@tanstack/react-query';
import { 
  Trophy, Award, Star, Calendar, Upload, Plus, X, 
  Loader2, FileText, Users, Target
} from 'lucide-react';
import { Button } from '@/components/ui/button';
import { Input } from '@/components/ui/input';
import { Textarea } from '@/components/ui/textarea';
import { Label } from '@/components/ui/label';
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from '@/components/ui/select';
import {
  Dialog,
  DialogContent,
  DialogHeader,
  DialogTitle,
} from "@/components/ui/dialog";
import { toast } from 'sonner';
import { format } from 'date-fns';

export default function AthleteJourney({ athleteId, isOwner = false }) {
  const [showAddDialog, setShowAddDialog] = useState(false);
  const [uploading, setUploading] = useState(false);
  const [newAchievement, setNewAchievement] = useState({
    title: '',
    description: '',
    date: '',
    type: '',
    certificate_url: '',
    sponsor_name: '',
    impact_description: ''
  });
  
  const queryClient = useQueryClient();

  const { data: achievements = [], isLoading } = useQuery({
    queryKey: ['achievements', athleteId],
    queryFn: () => base44.entities.AthleteAchievement.filter({ athlete_id: athleteId }),
    enabled: !!athleteId,
  });

  const createMutation = useMutation({
    mutationFn: (data) => base44.entities.AthleteAchievement.create({
      ...data,
      athlete_id: athleteId
    }),
    onSuccess: () => {
      queryClient.invalidateQueries(['achievements', athleteId]);
      setShowAddDialog(false);
      setNewAchievement({ title: '', description: '', date: '', type: '', certificate_url: '', sponsor_name: '', impact_description: '' });
      toast.success('Achievement added!');
    },
  });

  const deleteMutation = useMutation({
    mutationFn: (id) => base44.entities.AthleteAchievement.delete(id),
    onSuccess: () => {
      queryClient.invalidateQueries(['achievements', athleteId]);
      toast.success('Achievement removed');
    },
  });

  const handleUpload = async (e) => {
    const file = e.target.files[0];
    if (!file) return;
    setUploading(true);
    try {
      const { file_url } = await base44.integrations.Core.UploadFile({ file });
      setNewAchievement(prev => ({ ...prev, certificate_url: file_url }));
      toast.success('File uploaded!');
    } catch (error) {
      toast.error('Upload failed');
    } finally {
      setUploading(false);
    }
  };

  const handleSubmit = (e) => {
    e.preventDefault();
    if (!newAchievement.title || !newAchievement.type) {
      toast.error('Please fill in required fields');
      return;
    }
    createMutation.mutate(newAchievement);
  };

  const getIcon = (type) => {
    switch(type) {
      case 'award': return <Trophy className="w-5 h-5" />;
      case 'certificate': return <Award className="w-5 h-5" />;
      case 'milestone': return <Star className="w-5 h-5" />;
      case 'sponsorship': return <Users className="w-5 h-5" />;
      case 'competition': return <Target className="w-5 h-5" />;
      default: return <FileText className="w-5 h-5" />;
    }
  };

  const getColor = (type) => {
    switch(type) {
      case 'award': return 'bg-yellow-500';
      case 'certificate': return 'bg-blue-500';
      case 'milestone': return 'bg-purple-500';
      case 'sponsorship': return 'bg-green-500';
      case 'competition': return 'bg-red-500';
      default: return 'bg-gray-500';
    }
  };

  const sortedAchievements = [...achievements].sort((a, b) => 
    new Date(b.date || b.created_date) - new Date(a.date || a.created_date)
  );

  if (achievements.length === 0 && !isOwner) return null;

  return (
    <div className="bg-white rounded-2xl border border-gray-100 p-6">
      <div className="flex items-center justify-between mb-6">
        <h2 className="text-2xl font-black flex items-center gap-2">
          <Trophy className="w-6 h-6 text-orange-500" />
          Sponsorship Journey
        </h2>
        {isOwner && (
          <Button onClick={() => setShowAddDialog(true)} size="sm" className="bg-orange-500 hover:bg-orange-600">
            <Plus className="w-4 h-4 mr-1" />
            Add
          </Button>
        )}
      </div>

      {achievements.length === 0 ? (
        <div className="text-center py-8 bg-gray-50 rounded-xl">
          <Trophy className="w-12 h-12 text-gray-300 mx-auto mb-3" />
          <p className="text-gray-500">No achievements yet</p>
          {isOwner && (
            <Button onClick={() => setShowAddDialog(true)} variant="outline" className="mt-4">
              Add Your First Achievement
            </Button>
          )}
        </div>
      ) : (
        <div className="relative">
          {/* Timeline line */}
          <div className="absolute left-6 top-0 bottom-0 w-0.5 bg-gray-200" />
          
          <div className="space-y-6">
            {sortedAchievements.map((achievement, idx) => (
              <div key={achievement.id} className="relative flex gap-4">
                {/* Timeline dot */}
                <div className={`w-12 h-12 ${getColor(achievement.type)} rounded-full flex items-center justify-center text-white flex-shrink-0 z-10`}>
                  {getIcon(achievement.type)}
                </div>
                
                {/* Content */}
                <div className="flex-1 bg-gray-50 rounded-xl p-4 group">
                  <div className="flex items-start justify-between">
                    <div>
                      <h3 className="font-bold text-lg">{achievement.title}</h3>
                      {achievement.date && (
                        <p className="text-gray-500 text-sm flex items-center gap-1">
                          <Calendar className="w-3 h-3" />
                          {format(new Date(achievement.date), 'MMMM yyyy')}
                        </p>
                      )}
                    </div>
                    {isOwner && (
                      <Button 
                        size="icon" 
                        variant="ghost" 
                        className="opacity-0 group-hover:opacity-100 transition"
                        onClick={() => deleteMutation.mutate(achievement.id)}
                      >
                        <X className="w-4 h-4 text-red-500" />
                      </Button>
                    )}
                  </div>
                  
                  {achievement.description && (
                    <p className="text-gray-600 mt-2">{achievement.description}</p>
                  )}
                  
                  {achievement.type === 'sponsorship' && achievement.sponsor_name && (
                    <p className="text-green-600 font-semibold mt-2">Sponsored by: {achievement.sponsor_name}</p>
                  )}
                  
                  {achievement.impact_description && (
                    <div className="mt-3 bg-orange-50 border border-orange-200 rounded-lg p-3">
                      <p className="text-sm font-semibold text-orange-700 mb-1">Impact:</p>
                      <p className="text-sm text-orange-600">{achievement.impact_description}</p>
                    </div>
                  )}
                  
                  {achievement.certificate_url && (
                    <a 
                      href={achievement.certificate_url}
                      target="_blank"
                      rel="noopener noreferrer"
                      className="mt-3 inline-flex items-center gap-2 text-blue-600 hover:underline text-sm"
                    >
                      <FileText className="w-4 h-4" />
                      View Certificate
                    </a>
                  )}
                </div>
              </div>
            ))}
          </div>
        </div>
      )}

      {/* Add Achievement Dialog */}
      <Dialog open={showAddDialog} onOpenChange={setShowAddDialog}>
        <DialogContent className="sm:max-w-lg">
          <DialogHeader>
            <DialogTitle>Add Achievement</DialogTitle>
          </DialogHeader>
          
          <form onSubmit={handleSubmit} className="space-y-4">
            <div>
              <Label>Type *</Label>
              <Select value={newAchievement.type} onValueChange={(v) => setNewAchievement({...newAchievement, type: v})}>
                <SelectTrigger className="mt-1">
                  <SelectValue placeholder="Select type" />
                </SelectTrigger>
                <SelectContent>
                  <SelectItem value="award">Award</SelectItem>
                  <SelectItem value="certificate">Certificate</SelectItem>
                  <SelectItem value="milestone">Milestone</SelectItem>
                  <SelectItem value="sponsorship">Sponsorship</SelectItem>
                  <SelectItem value="competition">Competition</SelectItem>
                </SelectContent>
              </Select>
            </div>

            <div>
              <Label>Title *</Label>
              <Input 
                value={newAchievement.title}
                onChange={(e) => setNewAchievement({...newAchievement, title: e.target.value})}
                placeholder="e.g., State Championship Winner"
                className="mt-1"
              />
            </div>

            <div>
              <Label>Date</Label>
              <Input 
                type="date"
                value={newAchievement.date}
                onChange={(e) => setNewAchievement({...newAchievement, date: e.target.value})}
                className="mt-1"
              />
            </div>

            <div>
              <Label>Description</Label>
              <Textarea 
                value={newAchievement.description}
                onChange={(e) => setNewAchievement({...newAchievement, description: e.target.value})}
                placeholder="Tell us about this achievement..."
                className="mt-1"
              />
            </div>

            {newAchievement.type === 'sponsorship' && (
              <div>
                <Label>Sponsor Name</Label>
                <Input 
                  value={newAchievement.sponsor_name}
                  onChange={(e) => setNewAchievement({...newAchievement, sponsor_name: e.target.value})}
                  placeholder="Name of the sponsor"
                  className="mt-1"
                />
              </div>
            )}

            <div>
              <Label>Impact (How did this help you?)</Label>
              <Textarea 
                value={newAchievement.impact_description}
                onChange={(e) => setNewAchievement({...newAchievement, impact_description: e.target.value})}
                placeholder="Describe the impact..."
                className="mt-1"
              />
            </div>

            <div>
              <Label>Upload Certificate/Image</Label>
              <div className="mt-1">
                <input type="file" accept="image/*,.pdf" onChange={handleUpload} className="hidden" id="cert-upload" />
                <label htmlFor="cert-upload" className="cursor-pointer flex items-center gap-2 border-2 border-dashed border-gray-300 rounded-lg p-4 hover:border-orange-400 transition">
                  {uploading ? (
                    <Loader2 className="w-5 h-5 animate-spin" />
                  ) : (
                    <Upload className="w-5 h-5 text-gray-400" />
                  )}
                  <span className="text-gray-600">
                    {newAchievement.certificate_url ? 'File uploaded âœ“' : 'Click to upload'}
                  </span>
                </label>
              </div>
            </div>

            <Button type="submit" className="w-full bg-orange-500" disabled={createMutation.isPending}>
              {createMutation.isPending ? 'Adding...' : 'Add Achievement'}
            </Button>
          </form>
        </DialogContent>
      </Dialog>
    </div>
  );
}
