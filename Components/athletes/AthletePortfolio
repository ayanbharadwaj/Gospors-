import React, { useState } from 'react';
import { base44 } from '@/api/base44Client';
import { useQuery, useMutation, useQueryClient } from '@tanstack/react-query';
import { 
  Image, Video, FileText, Plus, X, Upload, Loader2,
  Calendar, Trophy, Play, ExternalLink
} from 'lucide-react';
import { Button } from '@/components/ui/button';
import { Input } from '@/components/ui/input';
import { Textarea } from '@/components/ui/textarea';
import { Label } from '@/components/ui/label';
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from '@/components/ui/select';
import {
  Dialog,
  DialogContent,
  DialogHeader,
  DialogTitle,
} from "@/components/ui/dialog";
import { toast } from 'sonner';
import { format } from 'date-fns';
import VideoDialog from './VideoDialog';

export default function AthletePortfolio({ athleteId, isOwner = false }) {
  const [showAddDialog, setShowAddDialog] = useState(false);
  const [showVideoDialog, setShowVideoDialog] = useState(false);
  const [selectedVideo, setSelectedVideo] = useState(null);
  const [uploading, setUploading] = useState(false);
  const [newItem, setNewItem] = useState({
    title: '',
    description: '',
    media_type: '',
    media_url: '',
    performance_date: '',
    event_name: '',
    results: ''
  });
  
  const queryClient = useQueryClient();

  const { data: portfolioItems = [], isLoading } = useQuery({
    queryKey: ['portfolio', athleteId],
    queryFn: () => base44.entities.AthletePortfolio.filter({ athlete_id: athleteId }),
    enabled: !!athleteId,
  });

  const createMutation = useMutation({
    mutationFn: (data) => base44.entities.AthletePortfolio.create({
      ...data,
      athlete_id: athleteId
    }),
    onSuccess: () => {
      queryClient.invalidateQueries(['portfolio', athleteId]);
      setShowAddDialog(false);
      setNewItem({ title: '', description: '', media_type: '', media_url: '', performance_date: '', event_name: '', results: '' });
      toast.success('Portfolio item added!');
    },
  });

  const deleteMutation = useMutation({
    mutationFn: (id) => base44.entities.AthletePortfolio.delete(id),
    onSuccess: () => {
      queryClient.invalidateQueries(['portfolio', athleteId]);
      toast.success('Item removed');
    },
  });

  const handleUpload = async (e) => {
    const file = e.target.files[0];
    if (!file) return;
    setUploading(true);
    try {
      const { file_url } = await base44.integrations.Core.UploadFile({ file });
      setNewItem(prev => ({ ...prev, media_url: file_url }));
      toast.success('File uploaded!');
    } catch (error) {
      toast.error('Upload failed');
    } finally {
      setUploading(false);
    }
  };

  const handleSubmit = (e) => {
    e.preventDefault();
    if (!newItem.title || !newItem.media_type) {
      toast.error('Please fill in required fields');
      return;
    }
    createMutation.mutate(newItem);
  };

  const getIcon = (type) => {
    switch(type) {
      case 'video': return <Video className="w-5 h-5" />;
      case 'image': return <Image className="w-5 h-5" />;
      default: return <FileText className="w-5 h-5" />;
    }
  };

  if (portfolioItems.length === 0 && !isOwner) return null;

  return (
    <div className="bg-white rounded-2xl border border-gray-100 p-6 mb-8">
      <div className="flex items-center justify-between mb-6">
        <h2 className="text-2xl font-black flex items-center gap-2">
          <Trophy className="w-6 h-6 text-orange-500" />
          Performance Portfolio
        </h2>
        {isOwner && (
          <Button onClick={() => setShowAddDialog(true)} size="sm" className="bg-orange-500 hover:bg-orange-600">
            <Plus className="w-4 h-4 mr-1" />
            Add
          </Button>
        )}
      </div>

      {portfolioItems.length === 0 ? (
        <div className="text-center py-8 bg-gray-50 rounded-xl">
          <Image className="w-12 h-12 text-gray-300 mx-auto mb-3" />
          <p className="text-gray-500">No portfolio items yet</p>
          {isOwner && (
            <Button onClick={() => setShowAddDialog(true)} variant="outline" className="mt-4">
              Add Your First Item
            </Button>
          )}
        </div>
      ) : (
        <div className="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
          {portfolioItems.map((item) => (
            <div key={item.id} className="bg-gray-50 rounded-xl overflow-hidden group relative">
              {isOwner && (
                <button 
                  onClick={() => deleteMutation.mutate(item.id)}
                  className="absolute top-2 right-2 z-10 bg-red-500 text-white p-1 rounded-full opacity-0 group-hover:opacity-100 transition"
                >
                  <X className="w-4 h-4" />
                </button>
              )}
              
              {item.media_type === 'video' && item.media_url && (
                <button 
                  onClick={() => { setSelectedVideo(item.media_url); setShowVideoDialog(true); }}
                  className="w-full aspect-video bg-gradient-to-br from-red-500 to-pink-500 flex items-center justify-center"
                >
                  <Play className="w-12 h-12 text-white fill-white" />
                </button>
              )}
              
              {item.media_type === 'image' && item.media_url && (
                <img src={item.media_url} alt={item.title} className="w-full aspect-video object-cover" />
              )}
              
              {item.media_type === 'document' && (
                <div className="w-full aspect-video bg-gradient-to-br from-blue-500 to-indigo-500 flex items-center justify-center">
                  <FileText className="w-12 h-12 text-white" />
                </div>
              )}
              
              <div className="p-4">
                <div className="flex items-center gap-2 mb-2">
                  {getIcon(item.media_type)}
                  <h3 className="font-bold truncate">{item.title}</h3>
                </div>
                {item.event_name && (
                  <p className="text-orange-600 text-sm font-semibold">{item.event_name}</p>
                )}
                {item.performance_date && (
                  <p className="text-gray-500 text-xs flex items-center gap-1">
                    <Calendar className="w-3 h-3" />
                    {format(new Date(item.performance_date), 'MMM yyyy')}
                  </p>
                )}
                {item.results && (
                  <p className="text-green-600 text-sm font-semibold mt-1">{item.results}</p>
                )}
                {item.description && (
                  <p className="text-gray-600 text-sm mt-2 line-clamp-2">{item.description}</p>
                )}
              </div>
            </div>
          ))}
        </div>
      )}

      {/* Add Dialog */}
      <Dialog open={showAddDialog} onOpenChange={setShowAddDialog}>
        <DialogContent className="sm:max-w-lg">
          <DialogHeader>
            <DialogTitle>Add Portfolio Item</DialogTitle>
          </DialogHeader>
          
          <form onSubmit={handleSubmit} className="space-y-4">
            <div>
              <Label>Media Type *</Label>
              <Select value={newItem.media_type} onValueChange={(v) => setNewItem({...newItem, media_type: v})}>
                <SelectTrigger className="mt-1">
                  <SelectValue placeholder="Select type" />
                </SelectTrigger>
                <SelectContent>
                  <SelectItem value="video">Video</SelectItem>
                  <SelectItem value="image">Image</SelectItem>
                  <SelectItem value="document">Document</SelectItem>
                </SelectContent>
              </Select>
            </div>

            <div>
              <Label>Title *</Label>
              <Input 
                value={newItem.title}
                onChange={(e) => setNewItem({...newItem, title: e.target.value})}
                placeholder="e.g., State Championship Game"
                className="mt-1"
              />
            </div>

            <div>
              <Label>Event Name</Label>
              <Input 
                value={newItem.event_name}
                onChange={(e) => setNewItem({...newItem, event_name: e.target.value})}
                placeholder="e.g., 2024 State Finals"
                className="mt-1"
              />
            </div>

            <div className="grid grid-cols-2 gap-4">
              <div>
                <Label>Date</Label>
                <Input 
                  type="date"
                  value={newItem.performance_date}
                  onChange={(e) => setNewItem({...newItem, performance_date: e.target.value})}
                  className="mt-1"
                />
              </div>
              <div>
                <Label>Results/Achievement</Label>
                <Input 
                  value={newItem.results}
                  onChange={(e) => setNewItem({...newItem, results: e.target.value})}
                  placeholder="e.g., 1st Place"
                  className="mt-1"
                />
              </div>
            </div>

            <div>
              <Label>Description</Label>
              <Textarea 
                value={newItem.description}
                onChange={(e) => setNewItem({...newItem, description: e.target.value})}
                placeholder="Tell us about this performance..."
                className="mt-1"
              />
            </div>

            <div>
              <Label>Upload Media or Enter URL</Label>
              <div className="mt-1 space-y-2">
                <Input 
                  value={newItem.media_url}
                  onChange={(e) => setNewItem({...newItem, media_url: e.target.value})}
                  placeholder="https://... or upload below"
                />
                <input type="file" accept="image/*,video/*,.pdf" onChange={handleUpload} className="hidden" id="portfolio-upload" />
                <label htmlFor="portfolio-upload" className="cursor-pointer flex items-center gap-2 border-2 border-dashed border-gray-300 rounded-lg p-3 hover:border-orange-400 transition">
                  {uploading ? <Loader2 className="w-5 h-5 animate-spin" /> : <Upload className="w-5 h-5 text-gray-400" />}
                  <span className="text-gray-600 text-sm">Click to upload file</span>
                </label>
              </div>
            </div>

            <Button type="submit" className="w-full bg-orange-500" disabled={createMutation.isPending}>
              {createMutation.isPending ? 'Adding...' : 'Add to Portfolio'}
            </Button>
          </form>
        </DialogContent>
      </Dialog>

      {/* Video Dialog */}
      <VideoDialog 
        url={selectedVideo}
        open={showVideoDialog}
        onOpenChange={setShowVideoDialog}
      />
    </div>
  );
}
