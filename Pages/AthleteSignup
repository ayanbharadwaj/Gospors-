import React, { useState, useEffect } from 'react';
import { base44 } from '@/api/base44Client';
import { useMutation } from '@tanstack/react-query';
import { Link, useNavigate } from 'react-router-dom';
import { createPageUrl } from '@/utils';
import { 
  ArrowLeft, Upload, Plus, X, Loader2, Check, 
  Trophy, Star, Target, Users 
} from 'lucide-react';
import { Button } from '@/components/ui/button';
import { Input } from '@/components/ui/input';
import { Textarea } from '@/components/ui/textarea';
import { Label } from '@/components/ui/label';
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from '@/components/ui/select';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { toast } from 'sonner';

export default function AthleteSignup() {
  const [user, setUser] = useState(null);
  const [isLoading, setIsLoading] = useState(true);
  const [profileImage, setProfileImage] = useState(null);
  const [uploadingImage, setUploadingImage] = useState(false);
  
  const [formData, setFormData] = useState({
    name: '',
    username: '',
    age: '',
    sport: '',
    location: '',
    story: '',
    needs: [''],
    highlight_url: '',
    email: '',
    phone: '',
    stats: {}
  });

  const [statKey, setStatKey] = useState('');
  const [statValue, setStatValue] = useState('');

  useEffect(() => {
    const checkAuth = async () => {
      try {
        const isAuth = await base44.auth.isAuthenticated();
        if (!isAuth) {
          base44.auth.redirectToLogin(window.location.href);
          return;
        }
        const userData = await base44.auth.me();
        setUser(userData);
        setFormData(prev => ({
          ...prev,
          email: userData.email,
          name: userData.full_name || ''
        }));
      } catch (e) {
        base44.auth.redirectToLogin(window.location.href);
      } finally {
        setIsLoading(false);
      }
    };
    checkAuth();
  }, []);

  const createMutation = useMutation({
    mutationFn: async (data) => {
      const athleteData = {
        ...data,
        age: data.age ? parseInt(data.age) : null,
        needs: data.needs.filter(n => n.trim() !== ''),
        profile_image_url: profileImage,
        followers_count: 0,
        is_trending: false
      };
      return base44.entities.Athlete.create(athleteData);
    },
    onSuccess: () => {
      toast.success('Profile created successfully!');
      window.location.href = createPageUrl('AthleteDashboard');
    },
    onError: (error) => {
      toast.error('Failed to create profile. Please try again.');
    }
  });

  const handleImageUpload = async (e) => {
    const file = e.target.files[0];
    if (!file) return;

    setUploadingImage(true);
    try {
      const { file_url } = await base44.integrations.Core.UploadFile({ file });
      setProfileImage(file_url);
      toast.success('Image uploaded!');
    } catch (error) {
      toast.error('Failed to upload image');
    } finally {
      setUploadingImage(false);
    }
  };

  const addNeed = () => {
    setFormData(prev => ({
      ...prev,
      needs: [...prev.needs, '']
    }));
  };

  const removeNeed = (index) => {
    setFormData(prev => ({
      ...prev,
      needs: prev.needs.filter((_, i) => i !== index)
    }));
  };

  const updateNeed = (index, value) => {
    setFormData(prev => ({
      ...prev,
      needs: prev.needs.map((need, i) => i === index ? value : need)
    }));
  };

  const addStat = () => {
    if (!statKey.trim() || !statValue.trim()) return;
    setFormData(prev => ({
      ...prev,
      stats: {
        ...prev.stats,
        [statKey]: statValue
      }
    }));
    setStatKey('');
    setStatValue('');
  };

  const removeStat = (key) => {
    setFormData(prev => {
      const newStats = { ...prev.stats };
      delete newStats[key];
      return { ...prev, stats: newStats };
    });
  };

  const handleSubmit = (e) => {
    e.preventDefault();
    if (!formData.name || !formData.sport || !formData.story) {
      toast.error('Please fill in all required fields');
      return;
    }
    createMutation.mutate(formData);
  };

  const sports = ['Basketball', 'Soccer', 'Track & Field', 'Tennis', 'Football', 'Swimming', 'Baseball', 'Volleyball', 'Other'];

  if (isLoading) {
    return (
      <div className="min-h-screen bg-gray-50 flex items-center justify-center">
        <Loader2 className="w-8 h-8 animate-spin text-purple-600" />
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-gray-50">
      {/* Header */}
      <div className="bg-gradient-to-r from-violet-600 to-fuchsia-600 text-white py-16">
        <div className="max-w-4xl mx-auto px-6">
          <Link 
            to={createPageUrl('Home')}
            className="text-white/80 hover:text-white mb-4 inline-flex items-center gap-2 text-sm font-semibold"
          >
            <ArrowLeft className="w-4 h-4" />
            Back to Home
          </Link>
          <h1 className="text-4xl md:text-5xl font-black mb-4">Create Your Athlete Profile</h1>
          <p className="text-purple-100 text-lg">
            Showcase your talent and connect with sponsors who want to support your athletic journey
          </p>
        </div>
      </div>

      <div className="max-w-4xl mx-auto py-12 px-6">
        {/* Benefits Cards */}
        <div className="grid md:grid-cols-3 gap-4 mb-12">
          <Card className="bg-gradient-to-br from-violet-50 to-purple-50 border-purple-100">
            <CardContent className="p-6 text-center">
              <Trophy className="w-10 h-10 text-purple-600 mx-auto mb-3" />
              <h3 className="font-bold mb-1">Showcase Talent</h3>
              <p className="text-sm text-gray-600">Upload highlights and share your story</p>
            </CardContent>
          </Card>
          <Card className="bg-gradient-to-br from-fuchsia-50 to-pink-50 border-pink-100">
            <CardContent className="p-6 text-center">
              <Users className="w-10 h-10 text-pink-600 mx-auto mb-3" />
              <h3 className="font-bold mb-1">Find Sponsors</h3>
              <p className="text-sm text-gray-600">Connect with people ready to help</p>
            </CardContent>
          </Card>
          <Card className="bg-gradient-to-br from-purple-50 to-indigo-50 border-indigo-100">
            <CardContent className="p-6 text-center">
              <Target className="w-10 h-10 text-indigo-600 mx-auto mb-3" />
              <h3 className="font-bold mb-1">Get Support</h3>
              <p className="text-sm text-gray-600">Receive equipment and funding</p>
            </CardContent>
          </Card>
        </div>

        <form onSubmit={handleSubmit}>
          <Card className="shadow-xl border-0">
            <CardHeader>
              <CardTitle className="text-2xl">Profile Information</CardTitle>
            </CardHeader>
            <CardContent className="space-y-8">
              {/* Profile Image */}
              <div>
                <Label className="text-base font-bold mb-3 block">Profile Photo</Label>
                <div className="flex items-center gap-6">
                  <div className="w-24 h-24 bg-orange-500 rounded-2xl flex items-center justify-center overflow-hidden">
                    {profileImage ? (
                      <img src={profileImage} alt="Profile" className="w-full h-full object-cover" />
                    ) : (
                      <svg className="w-12 h-12 text-white" viewBox="0 0 24 24" fill="currentColor"><path d="M2 19h20v3H2v-3zm2-9l4 4 4-6 4 6 4-4v9H4v-9z"/></svg>
                    )}
                  </div>
                  <div>
                    <input
                      type="file"
                      accept="image/*"
                      onChange={handleImageUpload}
                      className="hidden"
                      id="profile-image"
                    />
                    <label
                      htmlFor="profile-image"
                      className="cursor-pointer inline-flex items-center gap-2 bg-purple-100 text-purple-700 px-4 py-2 rounded-lg font-semibold hover:bg-purple-200 transition"
                    >
                      {uploadingImage ? (
                        <Loader2 className="w-4 h-4 animate-spin" />
                      ) : (
                        <Upload className="w-4 h-4" />
                      )}
                      Upload Photo
                    </label>
                    <p className="text-sm text-gray-500 mt-2">JPG, PNG up to 5MB</p>
                  </div>
                </div>
              </div>

              {/* Basic Info */}
              <div className="grid md:grid-cols-2 gap-6">
                <div>
                  <Label htmlFor="name" className="text-base font-bold">Full Name *</Label>
                  <Input
                    id="name"
                    value={formData.name}
                    onChange={(e) => setFormData({ ...formData, name: e.target.value })}
                    placeholder="Your full name"
                    className="mt-2"
                    required
                  />
                </div>
                <div>
                  <Label htmlFor="username" className="text-base font-bold">Username</Label>
                  <div className="relative mt-2">
                    <span className="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">@</span>
                    <Input
                      id="username"
                      value={formData.username}
                      onChange={(e) => setFormData({ ...formData, username: e.target.value.replace('@', '') })}
                      placeholder="username"
                      className="pl-8"
                    />
                  </div>
                </div>
                <div>
                  <Label htmlFor="age" className="text-base font-bold">Age</Label>
                  <Input
                    id="age"
                    type="number"
                    min="5"
                    max="25"
                    value={formData.age}
                    onChange={(e) => setFormData({ ...formData, age: e.target.value })}
                    placeholder="Your age"
                    className="mt-2"
                  />
                </div>
                <div>
                  <Label htmlFor="sport" className="text-base font-bold">Sport *</Label>
                  <Select 
                    value={formData.sport} 
                    onValueChange={(value) => setFormData({ ...formData, sport: value })}
                  >
                    <SelectTrigger className="mt-2">
                      <SelectValue placeholder="Select your sport" />
                    </SelectTrigger>
                    <SelectContent>
                      {sports.map(sport => (
                        <SelectItem key={sport} value={sport}>{sport}</SelectItem>
                      ))}
                    </SelectContent>
                  </Select>
                </div>
                <div>
                  <Label htmlFor="location" className="text-base font-bold">Location</Label>
                  <Input
                    id="location"
                    value={formData.location}
                    onChange={(e) => setFormData({ ...formData, location: e.target.value })}
                    placeholder="City, State"
                    className="mt-2"
                  />
                </div>
                <div>
                  <Label htmlFor="phone" className="text-base font-bold">Phone Number</Label>
                  <Input
                    id="phone"
                    type="tel"
                    value={formData.phone}
                    onChange={(e) => setFormData({ ...formData, phone: e.target.value })}
                    placeholder="(555) 123-4567"
                    className="mt-2"
                  />
                </div>
              </div>

              {/* Story */}
              <div>
                <Label htmlFor="story" className="text-base font-bold">Your Story *</Label>
                <p className="text-sm text-gray-500 mb-2">Tell sponsors about yourself, your passion, and your goals</p>
                <Textarea
                  id="story"
                  value={formData.story}
                  onChange={(e) => setFormData({ ...formData, story: e.target.value })}
                  placeholder="Share your athletic journey, your dreams, and why you need support..."
                  className="min-h-32"
                  required
                />
              </div>

              {/* Highlight URL */}
              <div>
                <Label htmlFor="highlight" className="text-base font-bold">Highlight Video URL</Label>
                <p className="text-sm text-gray-500 mb-2">Link to your YouTube, Vimeo, or Hudl highlights</p>
                <Input
                  id="highlight"
                  type="url"
                  value={formData.highlight_url}
                  onChange={(e) => setFormData({ ...formData, highlight_url: e.target.value })}
                  placeholder="https://youtube.com/watch?v=..."
                  className="mt-2"
                />
              </div>

              {/* Needs */}
              <div>
                <Label className="text-base font-bold">What Do You Need?</Label>
                <p className="text-sm text-gray-500 mb-3">List equipment, training, or other support you're looking for</p>
                <div className="space-y-3">
                  {formData.needs.map((need, index) => (
                    <div key={index} className="flex gap-2">
                      <Input
                        value={need}
                        onChange={(e) => updateNeed(index, e.target.value)}
                        placeholder="e.g., Basketball shoes, Training sessions..."
                      />
                      {formData.needs.length > 1 && (
                        <Button
                          type="button"
                          variant="ghost"
                          size="icon"
                          onClick={() => removeNeed(index)}
                          className="text-red-500 hover:text-red-600 hover:bg-red-50"
                        >
                          <X className="w-4 h-4" />
                        </Button>
                      )}
                    </div>
                  ))}
                  <Button
                    type="button"
                    variant="outline"
                    onClick={addNeed}
                    className="w-full border-dashed"
                  >
                    <Plus className="w-4 h-4 mr-2" />
                    Add Another Need
                  </Button>
                </div>
              </div>

              {/* Stats */}
              <div>
                <Label className="text-base font-bold">Performance Stats</Label>
                <p className="text-sm text-gray-500 mb-3">Add your key statistics (optional)</p>
                
                {Object.keys(formData.stats).length > 0 && (
                  <div className="flex flex-wrap gap-2 mb-4">
                    {Object.entries(formData.stats).map(([key, value]) => (
                      <div key={key} className="bg-purple-100 text-purple-700 px-3 py-2 rounded-lg flex items-center gap-2">
                        <span className="font-bold">{key}:</span>
                        <span>{value}</span>
                        <button
                          type="button"
                          onClick={() => removeStat(key)}
                          className="text-purple-500 hover:text-purple-700"
                        >
                          <X className="w-4 h-4" />
                        </button>
                      </div>
                    ))}
                  </div>
                )}
                
                <div className="flex gap-2">
                  <Input
                    value={statKey}
                    onChange={(e) => setStatKey(e.target.value)}
                    placeholder="Stat name (e.g., Points)"
                    className="flex-1"
                  />
                  <Input
                    value={statValue}
                    onChange={(e) => setStatValue(e.target.value)}
                    placeholder="Value (e.g., 850)"
                    className="w-32"
                  />
                  <Button
                    type="button"
                    variant="outline"
                    onClick={addStat}
                  >
                    Add
                  </Button>
                </div>
              </div>

              {/* Submit */}
              <div className="pt-6 border-t">
                <Button
                  type="submit"
                  disabled={createMutation.isPending}
                  className="w-full bg-gradient-to-r from-violet-600 to-fuchsia-600 text-white py-6 rounded-xl font-bold text-lg hover:scale-[1.02] transition-transform"
                >
                  {createMutation.isPending ? (
                    <>
                      <Loader2 className="w-5 h-5 mr-2 animate-spin" />
                      Creating Profile...
                    </>
                  ) : (
                    <>
                      <Check className="w-5 h-5 mr-2" />
                      Create My Profile
                    </>
                  )}
                </Button>
                <p className="text-center text-gray-500 text-sm mt-4">
                  By creating a profile, you agree to our terms of service
                </p>
              </div>
            </CardContent>
          </Card>
        </form>
      </div>
    </div>
  );
}
